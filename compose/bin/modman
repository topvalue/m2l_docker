#!/bin/bash

#--------------------------------------------------
# Check Platform
#--------------------------------------------------
platform='unknown'
uname=`uname`
if [[ "$uname" == 'Darwin' ]]; then
   platform='darwin'
elif [[ "$uname" == 'Linux' ]]; then
   platform='linux'
elif [[ "$uname" == 'FreeBSD' ]]; then
   platform='freebsd'
fi

#--------------------------------------------------
# Check brew exist
#--------------------------------------------------
if [ $platform == "darwin" ]; then
  brew=$(which brew)
  if [ ${#brew} == 0 ]; then
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi
fi

#--------------------------------------------------
# Check modman exist
#--------------------------------------------------
modman=$(which modman)
if [ ${#modman} == 0 ]; then
  if [ $platform == "darwin" ]; then
   echo "Install modman.."
   ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)" < /dev/null 2> /dev/null
   brew install modman
  elif [ $platform == "linux" ]; then
    bash < <(curl -s -L https://raw.github.com/colinmollenhour/modman/master/modman-installer)  
  fi
fi

cd src
echo $(pwd)
modman init
echo "Install magento extensions.."
modman clone git@github.com:topvalue/m2l_topvalue-script.git
modman clone git@github.com:topvalue/m2l_onestep-checkout.git
modman clone git@github.com:topvalue/m2l_sm-market-theme.git
modman clone git@github.com:topvalue/m2l_elastic-search.git
modman clone git@github.com:topvalue/m2l_improved-layered-navigation.git
modman clone git@github.com:topvalue/m2l_city-region.git
modman clone git@github.com:topvalue/m2l_promo-banners.git
modman clone git@github.com:topvalue/m2l_order-attributes.git
modman clone git@github.com:topvalue/m2l_automatic-related-products.git
modman clone git@github.com:topvalue/m2l_custom-registration-fields.git
modman clone git@github.com:topvalue/m2l_ajax-shopping-cart.git
modman clone git@github.com:topvalue/m2l_cookie-consent.git
modman clone git@github.com:topvalue/m2l_product-feed.git
modman clone git@github.com:topvalue/m2l_admin-actions-log.git
modman clone git@github.com:topvalue/m2l_special-promotions-pro.git
modman clone git@github.com:topvalue/m2l_extended-product-grid.git

#--------------------------------------------------
modman clone git@github.com:topvalue/m2l_social-login.git
### Note ### m2l_social-login require manual install some library
#--------------------------------------------------

modman clone git@github.com:topvalue/m2l_reward-points.git
modman clone git@github.com:topvalue/m2l_custom-promo-conditions.git
modman clone git@github.com:topvalue/m2l_custom-stock-status.git
modman clone git@github.com:topvalue/m2l_mass-product-actions.git
modman clone git@github.com:topvalue/m2l_free-gift.git
modman clone git@github.com:topvalue/m2l_abandoned-cart-email.git
modman clone git@github.com:topvalue/m2l_countdown-timer.git
modman clone git@github.com:topvalue/m2l_shipping-rules.git
modman clone git@github.com:topvalue/m2l_shipping-restrictions.git
modman clone git@github.com:topvalue/m2l_shipping-table-rates.git
modman clone git@github.com:topvalue/m2l_product-labels.git
modman clone git@github.com:topvalue/m2l_seo-toolkit.git
modman clone git@github.com:topvalue/m2l_generate-and-import-coupons.git
modman clone git@github.com:topvalue/m2l_promotions-manager.git
modman clone git@github.com:topvalue/m2l_advanced-product-reviews.git

#--------------------------------------------------
modman clone git@github.com:topvalue/m2l_omise.git
### Note ### m2l_omise require manual install some library
#--------------------------------------------------

modman clone git@github.com:topvalue/m2l_visual-merchandiser.git
